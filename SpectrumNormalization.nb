197c452ff03d"],

Cell[CellGroupData[{

Cell[BoxData[
 RowBox[{"2", "*", 
  RowBox[{"Integrate", "[", 
   RowBox[{
    RowBox[{"Exp", "[", 
     RowBox[{"I", "*", "k", "*", "x", "*", 
      RowBox[{"Cos", "[", "\[Theta]", "]"}]}], "]"}], ",", 
    RowBox[{"{", 
     RowBox[{"\[Theta]", ",", "0", ",", "\[Pi]"}], "}"}]}], "]"}], "*", "k", 
  "*", 
  FractionBox["amp", 
   SuperscriptBox["k", "power"]], "*", 
  FractionBox["1", 
   SuperscriptBox[
    RowBox[{"(", 
     RowBox[{"2", "\[Pi]"}], ")"}], "2"]]}]], "Input",
 CellChangeTimes->{{3.825511685200555*^9, 3.825511731316161*^9}, {
  3.825511990665029*^9, 3.825511994969474*^9}, {3.8255131708316317`*^9, 
