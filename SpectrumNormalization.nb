26791c4813fd"],

Cell[CellGroupData[{

Cell[BoxData[
 RowBox[{
  RowBox[{
   RowBox[{"(", 
    RowBox[{
     FractionBox[
      RowBox[{"amp", " ", 
       SuperscriptBox["k", 
        RowBox[{"1", "-", "power"}]], " ", 
       RowBox[{"BesselJ", "[", 
        RowBox[{"0", ",", 
         RowBox[{"k", " ", "x"}]}], "]"}]}], 
      RowBox[{"2", " ", "\[Pi]"}]], "/.", 
     RowBox[{"k", "\[RuleDelayed]", 
      RowBox[{"k", "/", "x"}]}]}], ")"}], "*", 
   FractionBox["1", "x"]}], "//", "PowerExpand"}]], "Input",
